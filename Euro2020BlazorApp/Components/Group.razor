<h2 style="padding-bottom: 10px;">Group @GroupModel.Name</h2>

<table class="table" style="width: 870px; margin-bottom: 20px;">
    <tr>
        <th></th>
        <th>Played</th>
        <th>Won</th>
        <th>Drawn</th>
        <th>Lost</th>
        <th>Goals For</th>
        <th>Goals Against</th>
        <th>Goal Difference</th>
        <th>Points</th>
    </tr>
    @foreach (var groupStanding in GroupModel.GroupStandings)
    {
        <tr>
            <td>
                <a href="team/@groupStanding.Team.TeamID">@groupStanding.Team.Name</a>
            </td>
            <td>@groupStanding.GamesPlayed</td>
            <td>@groupStanding.GamesWon</td>
            <td>@groupStanding.GamesDrawn</td>
            <td>@groupStanding.GamesLost</td>
            <td>@groupStanding.GoalsScored</td>
            <td>@groupStanding.GoalsAgainst</td>
            <td>@groupStanding.GoalDifference</td>
            <td>@groupStanding.PointsTotal</td>
        </tr>
    }
</table>

<div>
    <button class="toggleFixtureAndResultsVisibilityButton" @onclick="@ToggleVisbilityOfFixtures">@hideOrShow Fixtures</button>
    @if (FixturesVisible)
    {
        <FixturesAndResultsByGroup FixturesAndResultsByGroupModel="GroupModel.FixturesAndResultsByGroup"></FixturesAndResultsByGroup>
    }
</div>


@code {
    private bool FixturesVisible { get; set; } = false;

    private string hideOrShow => FixturesVisible ? "Hide" : "Show";

    [Parameter]
    public Models.Group GroupModel { get; set; }

    private void ToggleVisbilityOfFixtures()
    {
        FixturesVisible = !FixturesVisible;
    }
}
