@using Models.Enums;

@switch (ComponentSource)
{
    case Enums.ComponentSource.Groups:
        <a href="groupsandfixtures/@GroupModel.Name">
            <h2 style="padding-bottom: 10px;">Group @GroupModel.Name</h2>
        </a>
        break;
    case Enums.ComponentSource.GroupsAndFixtures:
        <h1 style="padding-bottom: 10px;">Group @GroupModel.Name</h1>
        break;
    default:
        break;
}

<table class="table" style="width: 870px; margin-bottom: 20px;">
    <tr>
        <th></th>
        <th>Played</th>
        <th>Won</th>
        <th>Drawn</th>
        <th>Lost</th>
        <th>Goals For</th>
        <th>Goals Against</th>
        <th>Goal Difference</th>
        <th>Points</th>
    </tr>
    @foreach (var groupStanding in GroupModel.GroupStandings)
    {
        <tr>
            <td>@groupStanding.Team.Name</td>
            <td>@groupStanding.GamesPlayed</td>
            <td>@groupStanding.GamesWon</td>
            <td>@groupStanding.GamesDrawn</td>
            <td>@groupStanding.GamesLost</td>
            <td>@groupStanding.GoalsScored</td>
            <td>@groupStanding.GoalsAgainst</td>
            <td>@groupStanding.GoalDifference</td>
            <td>@groupStanding.PointsTotal</td>
        </tr>
    }
</table>

@code {
    [Parameter]
    public Enums.ComponentSource ComponentSource { get; set; }

    [Parameter]
    public Models.Group GroupModel { get; set; }
}
