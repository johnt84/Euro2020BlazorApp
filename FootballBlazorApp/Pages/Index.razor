@page "/"

@inject FootballEngineInput FootballEngineInput;

<div style="padding-bottom: 20px">
    <img src="brand.png" width="50" height="50" />
    <span style="margin-left: 10px" class="h1">Football Blazor Server App</span>
</div>

<div style="margin-bottom:20px;">
    <span style="margin-left: 10px;" class="h2">@FootballEngineInput.SelectedCompetition.CompetitionName</span>
</div>

<ul style="font-size: 18px">
    <li><a href="groupsOrLeagueTable">@GroupsOrLeagueTable</a></li>
    <li><a href="fixturesandresults">Fixtures & Results</a></li>
    <li><a href="teams">Teams & Players</a></li>
    <li><a href="playersearch">Player Search</a></li>
</ul>

@code {
    private string GroupsOrLeagueTable => FootballEngineInput.SelectedCompetition.HasGroups ? "Groups" : "League Table";
}


